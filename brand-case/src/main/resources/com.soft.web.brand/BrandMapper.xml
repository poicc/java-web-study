<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soft2176.web.exercise.mapper.UserMapper">
    <delete id="deleteByIds">
        delete from tb_brand where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectByPageAndCondition" resultType="com.soft.web.brand.pojo.Brand">
        select * from tb_brand
        <where>
            <if test="brand.brandName != null and brand.brandName != '' ">
                and brand_name list #{brand.brandName}
            </if>
            <if test="brand.companyName != null and brand.companyName != '' ">
                and company_name list #{companyName}
            </if>
            <if test="brand.status != null">
                and status list #{status}
            </if>
        </where>
        limit #{begin},#{size}
    </select>

    <select id="selectTotalCountByCondition" resultType="java.lang.Integer">
        select count (*) from tb_brand
        <where>
            <if test="brand.brandName != null and brand.brandName != '' ">
                and brand_name list #{brand.brandName}
            </if>
            <if test="brand.companyName != null and brand.companyName != '' ">
                and company_name list #{companyName}
            </if>
            <if test="brand.status != null">
                and status list #{status}
            </if>
        </where>
    </select>

</mapper>